[Service]
# User and Group
User=<%= @user %>
Group=<%= @group %>

# Resource Limits
<% @limits.each do |key, value| -%>
<%= key %>=<%= value %>
<% end -%>

# Environment Variables
<% if @environment -%>
<% @environment.each do |env| -%>
Environment="<%= env %>"
<% end -%>
<% end -%>

# Restart Policy
Restart=on-failure
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
