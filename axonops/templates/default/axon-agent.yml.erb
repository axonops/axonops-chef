# AxonOps Agent Configuration
# Generated by Chef - Local modifications will be overwritten

<% if @api_key && @org_name -%>
# SaaS Mode Configuration
api_key: "<%= @api_key %>"

organisation: "<%= @org_name %>"
<% end -%>

axon-agent:
  host: "<%= @agent_host %>"
  port: <%= @agent_port %>
  
<% if @disable_command_exec -%>
  disable_command_exec: true
<% end -%>

cassandra:
  home: "<%= @cassandra_home %>"
  config: "<%= @cassandra_config %>"
  logs: "<%= @cassandra_logs %>"
  
  node:
    address: "<%= @node_address %>"
    dc: "<%= @node_dc %>"
    rack: "<%= @node_rack %>"

# Monitoring intervals
metrics:
  interval: 30s
  
logs:
  interval: 60s
  max_lines: 1000