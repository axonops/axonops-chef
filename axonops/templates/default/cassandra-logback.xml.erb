    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>WARN</level>
    </filter>
  </appender> -->
<% end -%>

  <root level="<%= node['axonops']['cassandra']['root_log_level'] %>">
    <appender-ref ref="SYSTEMLOG" />
    <appender-ref ref="STDOUT" />
<% if node['axonops']['cassandra']['debug_log_enabled'] -%>
    <appender-ref ref="ASYNCDEBUGLOG" /> <!-- Comment this line to disable debug.log -->
<% else -%>
    <!-- <appender-ref ref="ASYNCDEBUGLOG" /> --> <!-- Comment this line to disable debug.log -->
<% end -%>
    <!--
    <appender-ref ref="LogbackMetrics" />
    -->
<% if node['axonops']['cassandra']['cql_log_enabled'] -%>
    <appender-ref ref="CQLLOG"/>
<% else -%>
    <!--
    <appender-ref ref="CQLLOG"/>
    -->
<% end -%>
  </root>

  <logger name="org.apache.cassandra" level="<%= node['axonops']['cassandra']['cassandra_log_level'] %>"/>
</configuration>