<!--
In order to disable debug.log, comment-out the ASYNCDEBUGLOG
appender reference in the root level section below.
-->

<configuration scan="<%= node['axonops']['cassandra']['logback_scan'] %>" scanPeriod="<%= node['axonops']['cassandra']['logback_scan_period'] %>">
  <jmxConfigurator />

  <!-- No shutdown hook; we run it ourselves in StorageService after shutdown -->

  <!-- SYSTEMLOG rolling file appender to system.log (INFO level) -->

  <appender name="SYSTEMLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level><%= node['axonops']['cassandra']['system_log_level'] %></level>
    </filter>
    <file>${cassandra.logdir}/system.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${cassandra.logdir}/system.log.%d{yyyy-MM-dd}.%i.zip</fileNamePattern>
      <!-- each file should be at most 50MB, keep 7 days worth of history, but at most 5GB -->
      <maxFileSize><%= node['axonops']['cassandra']['log_max_file_size'] %></maxFileSize>
      <maxHistory><%= node['axonops']['cassandra']['log_max_history'] %></maxHistory>
      <totalSizeCap><%= node['axonops']['cassandra']['log_total_size_cap'] %></totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern><%= node['axonops']['cassandra']['log_pattern'] %></pattern>
    </encoder>
  </appender>

  <!-- DEBUGLOG rolling file appender to debug.log (all levels) -->

  <appender name="DEBUGLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${cassandra.logdir}/debug.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${cassandra.logdir}/debug.log.%d{yyyy-MM-dd}.%i.zip</fileNamePattern>
      <!-- each file should be at most 50MB, keep 7 days worth of history, but at most 5GB -->
      <maxFileSize><%= node['axonops']['cassandra']['log_max_file_size'] %></maxFileSize>
      <maxHistory><%= node['axonops']['cassandra']['log_max_history'] %></maxHistory>
      <totalSizeCap><%= node['axonops']['cassandra']['log_total_size_cap'] %></totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern><%= node['axonops']['cassandra']['log_pattern'] %></pattern>
    </encoder>
  </appender>

  <!-- ASYNCLOG assynchronous appender to debug.log (all levels) -->

  <appender name="ASYNCDEBUGLOG" class="ch.qos.logback.classic.AsyncAppender">
    <queueSize><%= node['axonops']['cassandra']['async_log_queue_size'] %></queueSize>
    <discardingThreshold><%= node['axonops']['cassandra']['async_log_discarding_threshold'] %></discardingThreshold>
    <includeCallerData>true</includeCallerData>
    <appender-ref ref="DEBUGLOG" />
  </appender>

  <!-- STDOUT console appender to stdout (INFO level) -->

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level><%= node['axonops']['cassandra']['console_log_level'] %></level>
    </filter>
    <encoder>
      <pattern><%= node['axonops']['cassandra']['log_pattern'] %></pattern>
    </encoder>
  </appender>

  <!-- Uncomment below configuration (Audit Logging (FileAuditLogger) rolling file appender and Audit Logging
  additivity) in order to have the log events flow through separate log file instead of system.log.
  Audit Logging (FileAuditLogger) rolling file appender to audit.log -->
<% if node['axonops']['cassandra']['audit_logging_enabled'] -%>
  <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${cassandra.logdir}/audit/audit.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${cassandra.logdir}/audit/audit.log.%d{yyyy-MM-dd}.%i.zip</fileNamePattern>
      <!-- each file should be at most 50MB, keep 30 days worth of history, but at most 5GB -->
      <maxFileSize><%= node['axonops']['cassandra']['audit_log_max_file_size'] %></maxFileSize>
      <maxHistory><%= node['axonops']['cassandra']['audit_log_max_history'] %></maxHistory>
      <totalSizeCap><%= node['axonops']['cassandra']['audit_log_total_size_cap'] %></totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern><%= node['axonops']['cassandra']['log_pattern'] %></pattern>
    </encoder>
  </appender>
<% else -%>
  <!-- <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${cassandra.logdir}/audit/audit.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy"> -->
      <!-- rollover daily -->
      <!-- <fileNamePattern>${cassandra.logdir}/audit/audit.log.%d{yyyy-MM-dd}.%i.zip</fileNamePattern> -->
      <!-- each file should be at most 50MB, keep 30 days worth of history, but at most 5GB -->
      <!-- <maxFileSize>50MB</maxFileSize>
      <maxHistory>30</maxHistory>
      <totalSizeCap>5GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%-5level [%thread] %date{ISO8601} %F:%L - %msg%n</pattern>
    </encoder>
  </appender> -->
<% end -%>

  <!-- Audit Logging additivity to redirect audit logging events to audit/audit.log -->
<% if node['axonops']['cassandra']['audit_logging_enabled'] -%>
  <logger name="org.apache.cassandra.audit" additivity="false" level="INFO">
    <appender-ref ref="AUDIT"/>
  </logger>
<% else -%>
  <!-- <logger name="org.apache.cassandra.audit" additivity="false" level="INFO">
    <appender-ref ref="AUDIT"/>
  </logger> -->
<% end -%>

  <!-- Uncomment bellow and corresponding appender-ref to activate logback metrics
  <appender name="LogbackMetrics" class="com.codahale.metrics.logback.InstrumentedAppender" />
   -->

  <!-- Uncomment below configuration and corresponding appender-ref to activate
  logging into system_views.system_logs virtual table. -->
<% if node['axonops']['cassandra']['cql_log_enabled'] -%>
  <appender name="CQLLOG" class="org.apache.cassandra.utils.logging.VirtualTableAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level><%= node['axonops']['cassandra']['cql_log_level'] %></level>
    </filter>
  </appender>
<% else -%>
