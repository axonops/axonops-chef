  <!-- Root level logging -->
  <root level="<%= @log_level %>">
    <appender-ref ref="SYSTEMLOG" />
    <appender-ref ref="STDOUT" />
    <appender-ref ref="ASYNCDEBUGLOG" />
  </root>

  <!-- Cassandra package logging -->
  <logger name="org.apache.cassandra" level="<%= @log_level %>"/>
  <logger name="com.datastax.driver" level="WARN"/>

