#!/bin/bash
# Wrapper for vagrant that prevents bundler conflicts
unset BUNDLE_GEMFILE
unset BUNDLE_PATH
unset RUBYOPT
unset BUNDLE_BIN_PATH
unset BUNDLE_ORIG_MANPATH
unset BUNDLE_ORIG_PATH
unset BUNDLE_ORIG_RB_USER_INSTALL
unset BUNDLER_ORIG_RUBYLIB
unset BUNDLER_VERSION
unset GEM_HOME
unset GEM_PATH
exec env -i PATH="$PATH" HOME="$HOME" /usr/local/bin/vagrant "$@"
